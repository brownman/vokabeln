<table class="vocables" id="vocables">
  <colgroup>
    <col width="35%" />
    <col width="35%" />
    <col width="10%" />
    <col width="20%" />
  </colgroup>
  <thead>
    <tr>
      <th>Foreign word</th>
      <th>Translation</th>
      <th><span class="hidden">Delete</span></th>
      <th><span class="hidden">Success</span></th>
    </tr>
  </thead>
  <tbody>
    <tr id="no-vocables-notice" class="<%= "totally-hidden" unless vocables.empty? %>">
      <td colspan="3">No vocables yet. Use the form below to add some.</td>
    </tr>
    <%= render :partial => 'vocables/table_row', :collection => vocables, :as => :vocable %>
  </tbody>
</table>
